{
	"title": "Question",
	"type": "object",
	"properties": {
		"questionText": {"$ref": "#/definitions/message"},
		"multipleAnswers": {"type": "boolean"},
		"imageAnswer": {
			"type": "object",
			"required": ["img"],
			"properties": {
				"img": {
					"type": "string",
					"media": {
						"type": "image/*",
						"binaryEncoding": "base64"
					}
				},
				"caption": {"$ref": "#/definitions/message"}
			}
		},
		"answers": {
			"type": "array",
			"items": {
				"oneOf": [
					{"$ref": "#/definitions/message"},
					{"$ref": "#/definitions/date-time"}
				]
			},
			"minItems": 1
		}
	},
	"required": ["questionText", "answers"],
	"default": {
		"questionText": {
			"en": "What is your favourite colour?",
			"de": "Was ist seine leibste Farbe?"
		},
		"answers": [
			{
				"en": "Green",
				"de": "Gr√ºne"
			},
			{
				"en": "Blue",
				"de": "Blau"
			}
		]
	},
	"definitions": {
		"message": {
			"title": "Translated text",
			"type": "object",
			"properties": {
				"image": {
					"type": "string",
					"media": {
						"type": "image/*",
						"binaryEncoding": "base64"
					}
				}
			},
			"required": ["en"],
			"additionalProperties": {
				"type": "string"
			},
			"default": {
				"en": "Question?"
			}
		},
		"date-time": {
			"title": "Date/time answer",
			"enum": ["date-time"]
		},
		"editableQuestion": {
			"type": "object",
			"allOf": [
				{
					"$ref": "#"
				}
			],
			"links": [
				{
					"rel": "edit",
					"href": "",
					"method": "PUT"
				}
			]
		},
		"idList": {
			"type": "array",
			"items": {
				"type": "string",
				"links": [
					{
						"rel": "full",
						"href": "edit-questions.php/{$}"
					}
				]
			}
		},
		"editableList": {
			"type": "array",
			"items": {
				"type": "string",
				"allOf": [
					{
						"$ref": "#/"
					}
				],
				"links": [
					{
						"rel": "edit",
						"href": "edit-questions.php/{$}"
					}
				]
			}
		}
	}
}
